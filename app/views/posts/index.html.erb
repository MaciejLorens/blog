<% content_for :sidebar do %>
  <% if current_user && current_user.is_admin? %>
    <%= link_to "New Post", new_post_path, :class => "new_item_button" %>
  <% end %>

  <% @taxons.each do |taxon| %>
    <li><%= link_to taxon.name, taxon.permalink %></li>
  <% end %>
<% end %>

<% @posts.each do |post| %>
  <div class="post">
    <table id="post-header">
      <tr>
        <td>
          <h1 class="post-title"><%= link_to post.title, post_path(post) %></h1>
        </td>
        <td>
          <%= link_to "Edit", edit_post_path(post) if current_user && current_user.is_admin? %>
        </td>
      </tr>
    </table>
    <p class="post-content">
      <%= limited_post_content(post.content) %>
      <%= link_to "(read more)", post_path(post) %>
    </p>
    <p class="links">
      <%= link_to "Read More", post_path(post), :class => 'more' %> &nbsp;&nbsp;&nbsp; 
      <%= link_to_post(post) %>
    </p>
  </div>
<% end %>

